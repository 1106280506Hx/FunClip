  "filter_definitions": {
    "brighten": {
      "type": "colorx",
      "factor": 1.1
    },
    "darken": {
      "type": "colorx",
      "factor": 0.9
    },
    "saturate": {
      "type": "lum_contrast",
      "lum": 0,
      "contrast": 0.3
    },
    "high_contrast": {
      "type": "lum_contrast",
      "lum": 0,
      "contrast": 0.5
    },
    "soft_contrast": {
      "type": "lum_contrast",
      "lum": 0.05,
      "contrast": 0.1
    },
    "vignette": {
      "type": "mask_vignette",
      "size": 0.8
    },
    "sepia": {
      "type": "colorx",
      "factor": [1.2, 1.0, 0.8]
    },
    "grain": {
      "type": "noise",
      "amount": 0.02
    },
    "soft_focus": {
      "type": "blur",
      "kernel_size": 3
    },
    "bloom": {
      "type": "glow",
      "intensity": 0.3
    },
    "cool_tone": {
      "type": "colorx",
      "factor": [0.9, 1.0, 1.1]
    },
    "sharpen": {
      "type": "sharpen",
      "amount": 0.3
    },
    "pop": {
      "type": "lum_contrast",
      "lum": 0.1,
      "contrast": 0.4
    },
    "neutral": {
      "type": "colorx",
      "factor": 1.0
    },
    "clarity": {
      "type": "sharpen",
      "amount": 0.2
    }
  }
}
